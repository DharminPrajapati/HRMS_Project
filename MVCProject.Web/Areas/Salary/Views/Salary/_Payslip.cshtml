<html>
<head>

    <style>
        .payslip-title {
            text-align: center;
            text-decoration: underline;
            text-transform: uppercase;
            margin: 0 0 20px;
        }

        .inv-logo {
            height: auto;
            max-height: 100px;
            width: auto;
            margin: 0 0 20px;
            padding: inherit;
        }

        .invoice-details {
            float: right;
            text-align: right;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            padding: 8px;
            border-bottom: 1px solid #ddd;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <div ng-controller="SalaryCtrl" novalidate ng-init="GetData('@ViewBag.EmployeeId')">
        <div><hr /><hr /></div>
        <!--Start Body Section-->
        <div class="card-box">
            <div class="row">
                <div class="col-md-12">
                    <!-- start Salary form -->

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">

                                <img src="~/Content/images/Group 11.png" class="inv-logo" alt="">

                                <ul class="list-unstyled mb-0">

                                    <li>Ask E-Solution Pvt.Limited</li>

                                    <li>214 to 217,Luxuria Bussiness Hub</li>

                                    <li>Beside Dumas Resort, Dumas Road, Surat-395007</li>

                                </ul>
                            </div>
                        </div>

                        <div class="col-md-4">
                       
                            <div class="form-group">
                                <center>
                                    <span>
                                        <strong>Payslip</strong>
                                    </span>
                                </center>
                            </div>

                        </div>
                 
                        <div class="col-sm-6 m-b-20">

                            <div class="invoice-details">

                                <h2 class="text-uppercase">Payslip #49029</h2>

                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <ul class="list-unstyled mb-0">

                                <li>Employee : <span>@Model.Result.Name</span></li>

                                <li>Department : <span>@Model.Result.DepartmentName</span></li>

                                <li>Employee ID: @Model.Result.BatchNo</li>



                            </ul>
                        </div>


                    </div>
                    <hr />

                    <div class="row">
                        <div class="col-md-12">

                            <div class="form-control-static">

                                <table class="table table-striped table-bordered table-hover">
                                    <tr>
                                        <th>
                                            Earning
                                        </th>
                                        <th>
                                            Deduction
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>
                                            Basic Salary: <span class="end">&#8377; @Model.Result.BasicSalary</span>
                                        </td>
                                        <td>
                                            Provident Fund : <span class="start">&#8377; @Model.Result.PFamt</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            House Rent Allowance (H.R.A.) : <span class="end">&#8377; @Model.Result.HRAamt</span>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <strong> Net Salary: &#8377;  @Model.Result.netSalary </strong>
                                        </td>
                                    </tr>
                                </table>

                            </div>

                        </div>
                    </div>


                </div>
            </div>
        </div>
        <!--End Body Section-->

    </div>



</body>
</html>
@section scripts {
    @Scripts.Render("~/bundles/Salary/Salary")
}






