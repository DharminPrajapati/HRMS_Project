<div ng-controller="SalaryCtrl" novalidate>

    <!--Start Title Section-->
    <div class="main-page-title title-icon relative l">
        <i class="fa fa-inr icon-position" style="padding-top:8px;"></i>
        <h4 class="header-title-sub l">
            @Resource.Salary

        </h4>
        <div class="pull-right">

        </div>
    </div>

    <!--End Title Section-->
    <!--Start Body Section-->
    <div class="card-box">
        <div class="row">
            <div class="col-md-12">

                <!-- start Salary form -->
                <form name="frmSalary"  novalidate ng-init="Init()">
                    @*<button class="accordion"> Employee </button>
                        <div class="panel">*@
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Employee Name <span class="required-field">*</span>
                                </label>

                                <div angucomplete-alt
                                     name="txtEmp"
                                     id="txtEmp"
                                     input-name="GetFullname"
                                     placeholder="Full Name"
                                     pause="200"
                                     selected-object="selectedProject"
                                     remote-url="{{FullnameURL}}"
                                     remote-url-data-field="Result"
                                     initial-value="salaryDetailScope.Name"
                                     title-field="Name"
                                     description-field="description"
                                     minlength="1"
                                     input-class="form-control form-control-small "
                                     match-class="highlight"
                                     ng-focus="true">

                                </div>

                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Designation
                                </label>
                                <input type="text" class="form-control" ng-disabled="true" ng-model="salaryDetailScope.DesignationName" ng-change="getEmployeebyId(Id)" placeholder="@Resource.Designation" @*placeholder="{{data.DesignationName}}"*@ maxlength="250" />
                                <div class="c">
                                </div>

                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Department
                                </label>
                                <input type="text" class="form-control" ng-disabled="true" ng-model="salaryDetailScope.DepartmentName" ng-change="getEmployeebyId(Id)" placeholder="@Resource.Department" maxlength="250" />
                                <div class="c">
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Basic Salary <span class="required-field">*</span>
                                </label>
                                <input type="text" class="form-control" name="basicsalary" id="basicsalary" ng-model="salaryDetailScope.BasicSalary" tabindex="1" ng-change="CalculateSalary()" placeholder="@Resource.BasicSalary" maxlength="250" />
                                <div class="c">
                                </div>

                            </div>
                        </div>
                        <div class="col-md-4">
                            <!--IsActive -->
                            <div class="form-group">
                                <label>
                                </label>
                                <div class="form-control-static">
                                    <div class="checkbox checkbox-info">
                                        <input type="checkbox" id="chkIsActive" name="chkIsActive" ng-model="salaryDetailScope.IsActive"
                                               tabindex="2" />
                                        <label for="chkDesignationActive">

                                            @Resource.IsActive
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*</div>*@

                    @*<button  class="accordion">Allowances </button>
                        <div class="panel">*@

                    <div class="container">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Allowances</label>


                                <div class="form-group" ng-repeat="a in Allowances">
                                    <label>{{a.Description}} ({{a.Value}}%)</label>

                                </div>
                                <div class="form-group">
                                    <label>Total Allowances</label>
                                </div>

                            </div>
                            <div class="col-md-6">

                                <label>Debit</label>
                                <div class="col-md-6">
                                    <label>Credit</label>
                                </div>
                                <div class="form-group" ng-repeat="a in AllowancesDetailScope">
                                    <input type="text" placeholder="0" ng-model="a.AllowanceAmount" ng-change="UpdateTotalAllowance()" />
                                    <input type="text" placeholder="0" ng-disabled="true" />
                                </div>
                                <div class="form-group">
                                    = <input type="text" placeholder="Total Allowance" ng-disabled="true" ng-model="salaryDetailScope.TotalAllowance" />
                                </div>

                            </div>
                        </div>
                    </div>
                    @*</div>*@
                    @*<button class="accordion">Deduction</button>
                        <div class="panel">*@
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Deduction</label>

                                <div class="form-group" ng-repeat="d in Deductions">
                                    <label>{{d.Description}} ({{d.Value}}%)</label>

                                </div>
                                <div class="form-group">
                                    <label>Total Deduction</label>
                                </div>

                            </div>
                            <div class="col-md-6">

                                <label>Debit</label>
                                <div class="col-md-6">
                                    <label>Credit</label>
                                </div>

                                <div class="form-group" ng-repeat="d in DeductionDetailScope">
                                    <input type="text" placeholder="0" ng-disabled="true" />
                                    <input type="text" placeholder="0" ng-model="d.DeductionAmount" ng-change="UpdateTotalDeduction()" />
                                </div>
                                <div class="form-group">
                                    = <input type="text" placeholder="Total Deduction" ng-disabled="true" ng-model="salaryDetailScope.TotalDeductoin" />
                                </div>

                            </div>
                        </div>
                    </div>




                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Gross Salary<span>(₹)</span>
                                </label>
                                <div class="row">
                                    @*<div class="col-md-4">*@
                                    <input type="text" name="grossSalary" id="grossSalary" ng-disabled="true" ng-model="GrossSalary" value="{{CalGrossSalary()}}" placeholder="Gross Salary" maxlength="250" /> -
                                    <div class="c">
                                    </div>
                                    @*</div>*@
                                </div>

                            </div>
                        </div>
                        <div class="col-md-4">

                            <div class="form-group">
                                <label>
                                    Total Deductions <span>(₹)</span>
                                </label>
                                <div class="row">

                                    <input type="text" name="totalDeduction" id="totalDeduction" ng-disabled="true" ng-model="salaryDetailScope.TotalDeductoin" placeholder="Total Deduction" maxlength="250" /> =

                                </div>

                            </div>
                        </div>

                        @*<div class="col-md-4">*@
                        <div class="form-group">
                            <label>
                                Net Salary<span>(₹)</span>
                            </label>
                            <div class="row">
                                <input type="text" name="netsalary" id="netsalary" ng-disabled="true" ng-model="salaryDetailScope.netSalary" value="{{CalNetSalary()}}" placeholder="Net Salary" maxlength="250" />
                                <div class="c">
                                </div>
                            </div>

                        </div>
                        @*</div>*@
                    </div>

                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group">
                                <button type="submit" class="btn btn-success waves-effect w-md waves-light m-b-5"
                                        @*ng-disabled="frmSalary.txtSalary.$invalid" *@ tabindex="5" ng-click="SaveSalaryDetails(salaryDetailScope,frmSalary)">
                                    {{salaryDetailScope.SalaryId > 0 ? '@Resource.Update' : '@Resource.Save'}}
                                </button>
                                <button type="button" ng-click="ClearFormData(frmSalary)" class="btn btn-info waves-effect w-md waves-light m-b-5"
                                        tabindex="4">
                                    @Resource.Clear
                                </button>
                            </div>
                        </div>
                    </div>


                </form>

                <!-- End Salary form -->
                <hr />
                @* Start Salary Details List*@
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-7">
                                <h2 class="">
                                    @*<i class="fa fa-inr"></i>*@
                                    <label class="table-title">
                                        @Resource.Salary @Resource.Details
                                    </label>
                                    <button type="button" class="btn btn-success btn-xs waves-effect" ng-click="Export()" style="">

                                        <i class="fa fa-file-excel-o m-r-5" aria-hidden="true"></i>Export To Excel
                                    </button>
                                </h2>
                            </div>
                            <div class="col-md-5">
                                <div class="input-group">
                                    <input type="text" tabindex="104" ng-model="search" class="form-control" ng-change="isSearchClicked = false;" placeholder="@string.Format(" {0} {1} {2}",Resource.Search,Resource.Employee,Resource.Details)" />
                                    <a href class="input-group-addon cursor-pointer" tabindex="105" ng-click="isSearchClicked=true;tableParams.page(1);tableParams.reload();"> <i class="fa fa-search"></i></a>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="form-control-static">
                            <scrollable-table scroll-height="427">
                                <table ng-table="tableParams" id="datatable" class="table table-striped table-bordered table-hover">
                                    <tr ng-repeat="dt in $data">
                                        @*ng-hide="!dt.IsActive">*@
                                        <td data-title="'@Resource.SrNo'" header-class="'colSrno'" ng-class="'colSrno text-right'">
                                            {{(tableParams.$params.page-1)*tableParams.$params.count+($index + 1)}}
                                        </td>
                                        <td data-title="'Name'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{dt.Name}}">
                                            {{dt.FirstName}} {{dt.LastName}}
                                        </td>
                                        <td data-title="'Department'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{dt.DepartmentId}}">
                                            {{dt.DepartmentName}}
                                        </td>
                                        <td data-title="'Designation'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{dt.DesignationId}}">
                                            {{dt.DesignationName}}
                                        </td>
                                        <td data-title="'@Resource.BasicSalary'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{dt.BasicSalary}}">
                                            {{dt.BasicSalary |currency:'&#8377;'}}
                                        </td>
                                        <td data-title="'Net Salary(₹)'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{dt.netSalary}}">
                                            {{dt.netSalary|currency:'&#8377;'}}
                                        </td>
                                        <td data-title="'@Resource.Active'" header-class="'colActive'" ng-class="'colActive text-center'">
                                            <input type="checkbox" class="js-switch" ui-switch options="switchOptions" ng-model="dt.IsActive"
                                                   ng-disabled="true" />
                                        </td>

                                        <td data-title="'@Resource.Action'" header-class="'colAction'" ng-class="'colAction text-center'">
                                            <a class="btn btn-icon btn-white btn-xs waves-effect waves-light m-r-5 btn-edit" title="Edit"
                                               ng-click="EditSalaryDetails(dt.SalaryId,frmSalary)">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        </td>
                                        <td data-title="'Generate Palyslip'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{dt.EmployeeId}}">
                                            <a href="~/Salary/Salary/Payslip?employeeId={{dt.EmployeeId}}" class="btn m-r-5 btn-sm btn-custom "> PaySlip_{{dt.SalaryId}}</a>

                                        </td>
                                    </tr>

                                </table>
                            </scrollable-table>
                        </div>
                    </div>
                </div>
            </div>
            <!--End Salary Details List-->

        </div>
    </div>
</div>
<!--End Body Section-->
<script>
    var acc = document.getElementsByClassName("accordion");
    var i;

    for (i = 0; i < acc.length; i++) {
        acc[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var panel = this.nextElementSibling;
            if (panel.style.display === "block") {
                panel.style.display = "none";
            } else {
                panel.style.display = "block";
            }
        });
    }
</script>


@section scripts {
    @Scripts.Render("~/bundles/Salary/Salary")
}
