@model  MVCProject.Web.Models.EmployeeData
@{
    ViewBag.Title = "Payslip";
    Layout = "~/Views/Shared/_LayoutPayslip.cshtml";
}

<html>
<head>
    <style>
        .payslip-title {
            text-align: center;
            text-decoration: underline;
            text-transform: uppercase;
            margin: 0 0 20px;
        }

        .inv-logo {
            height: auto;
            max-height: 100px;
            width: auto;
            margin: 0 0 20px;
        }

        .invoice-details {
            float: right;
            text-align: right;
        }

        .float-end {
            /*  margin-left: 91%;*/
            float: right !important;
        }
    </style>
</head>
<body>

    <div class="page-wrapper" ng-controller="SalaryCtrl" ng-init="GetData('@ViewBag.EmployeeId')">

        <div class="container-fluid">





            <div class="row">

                <div class="col-md-12">

                    <div class="card" style="height:670px;">

                        <div class="card-body">
                            <center>
                                <span>
                                    <strong>Payslip</strong>
                                </span>
                            </center>


                            <div class="row">

                                <div class="col-sm-6 m-b-20">

                                    <img src="~/Content/images/Group 11.png" class="inv-logo" alt="">

                                    <ul class="list-unstyled mb-0" style="margin-left: 15px;">

                                        <li>Ask E-Solution Pvt.Limited</li>

                                        <li>214 to 217,Luxuria Bussiness Hub</li>

                                        <li>Beside Dumas Resort, Dumas Road, Surat-395007</li>

                                    </ul>

                                </div>

                                <div class="col-sm-6 m-b-20">

                                    <div class="invoice-details">

                                        <h2 class="text-uppercase">Payslip #49029</h2>



                                    </div>

                                </div>

                            </div>

                            <div class="row">

                                <div class="col-lg-12 m-b-20">

                                    <ul class="list-unstyled" style="margin-left: 15px;">

                                        <li>Employee : <span>@Model.Result.Name</span></li>

                                        <li>Department : <span>@Model.Result.DepartmentName</span></li>

                                        <li>Employee ID:@Model.Result.BatchNo</li>



                                    </ul>

                                </div>

                            </div>

                            <div class="row">

                                <div class="col-sm-6">

                                    <div>

                                        <h4 class="m-b-10"><strong>Earnings</strong></h4>

                                        <table class="table table-bordered" style=" width: 90%; margin-left: 20px; ">

                                            <tbody>

                                                <tr>

                                                    <td><strong>Basic Salary</strong> <span class="float-end">&#8377; @Model.Result.BasicSalary</span></td>

                                                </tr>

                                                <tr>

                                                    <td><strong>House Rent Allowance (H.R.A.)</strong> <span class="float-end">&#8377; @Model.Result.HRAamt</span></td>

                                                </tr>

                                                <tr>

                                                    <td><strong>Conveyance</strong> <span class="float-end">$55</span></td>

                                                </tr>

                                                <tr>

                                                    <td><strong>Other Allowance</strong> <span class="float-end">$55</span></td>

                                                </tr>

                                                <tr>

                                                    <td><strong>Total Earnings</strong> <span class="float-end"><strong>$55</strong></span></td>

                                                </tr>

                                            </tbody>

                                        </table>

                                    </div>

                                </div>

                                <div class="col-sm-6">

                                    <div>

                                        <h4 class="m-b-10"><strong>Deductions</strong></h4>

                                        <table class="table table-bordered" style=" width: 90%; margin-left: 50px;">

                                            <tbody>

                                                <tr>

                                                    <td><strong>Tax Deducted at Source (T.D.S.)</strong> <span class="float-end">$0</span></td>

                                                </tr>

                                                <tr>

                                                    <td><strong>Provident Fund</strong> <span class="float-end">&#8377; @Model.Result.PFamt</span></td>

                                                </tr>

                                                <tr>

                                                    <td><strong>ESI</strong> <span class="float-end">$0</span></td>

                                                </tr>

                                                <tr>

                                                    <td><strong>Loan</strong> <span class="float-end">$300</span></td>

                                                </tr>

                                                <tr>

                                                    <td><strong>Total Deductions</strong> <span class="float-end"><strong></strong></span></td>

                                                </tr>

                                            </tbody>

                                        </table>

                                    </div>

                                </div>

                                <div class="col-sm-12">

                                    <p style="margin-left: 12px;"><strong>Net Salary: &#8377; @Model.Result.netSalary</strong> </p>

                                </div>

                            </div>
                            <div class="row col-sm-12">
                                @Html.ActionLink("Back", "Index", "Salary", new { @class = "btn btn-white back" })
                                <center>
                                    @* <a class=" fa fa-print   " href="/Salary/Salary/SaveAboutPage?employeeId=@Model.Result.EmployeeId" target="_blank">PDF</a>*@
                                    <a class="btn btn-white fa fa-print fa-lg  " href="/Salary/Salary/PrintAboutPage?employeeId=@Model.Result.EmployeeId" target="_blank">Print</a>
                                </center>
                            </div>

                        </div>


                    </div>

                </div>

            </div>

        </div>



    </div>
</body>
</html>
@section scripts {
    @Scripts.Render("~/bundles/Salary/Salary")
}
