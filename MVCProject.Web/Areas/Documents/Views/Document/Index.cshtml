@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .colSrno {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }

    .colPosition {
        width: 400px !important;
        min-width: 400px !important;
        max-width: 400px !important;
    }

    .colActive {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }

    .colAction {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }
</style>

<div ng-controller="DocumentCtrl" novalidate>
    <!--Start Title Section-->
        <!--Start Title Section-->
        <div class="main-page-title title-icon relative l">
            <i class="fa fa-paperclip icon-position" style="padding-top:8px;"></i>
            <h4 class="header-title-sub l">@Resource.Document</h4>
            <div class="pull-right">
</div>
            </div>
            <!--End Title Section-->
            <!--Start Body Section-->
            <div class="card-box">
                <div class="row">
                    <div class="col-md-12">

                        <!-- start Document form -->
                        <form name="frmDocuments" novalidate ng-init="DocumentDrop()">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>
                                            Employee Name <span class="required-field">*</span>
                                        </label>

                                        <div angucomplete-alt
                                             name="txtEmp"
                                             id="txtEmp"
                                             input-name="GetFullname"
                                             placeholder="Full Name"
                                             pause="200"
                                             selected-object="selectedProject"
                                             remote-url="{{FullnameURL}}"
                                             remote-url-data-field="Result"
                                             initial-value="documentDetails.Name"
                                             title-field="Name"
                                             description-field="description"
                                             minlength="1"
                                             input-class="form-control form-control-small "
                                             match-class="highlight"
                                             ng-focus="true"
                                             tabindex="1">

                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>
                                            Department
                                        </label>
                                        <input type="text" class="form-control" ng-disabled="true" ng-model="documentDetails.DepartmentName" ng-change="getEmployeebyId(Id)" placeholder="@Resource.Department" maxlength="250" />
                                        <div class="c">
                                        </div>

                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>
                                            Designation
                                        </label>
                                        <input type="text" class="form-control" ng-disabled="true" ng-model="documentDetails.DesignationName" ng-change="getEmployeebyId(Id)" placeholder="@Resource.Designation" maxlength="250" />
                                        <div class="c">
                                        </div>

                                    </div>
                                </div>



                            </div>


                            <hr />
                            <div class="pull-right">
                                <button type="button" class="btn btn-primary mb-3" ng-click="addFile()"> @Resource.Add</button>
                            </div>
                            <table id="datatable" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th style=" color: black; ">@Resource.SrNo</th>
                                        <th style=" color: black; ">@Resource.DocumentType</th>
                                        <th style=" color: black; ">@Resource.Upload</th>
                                        <th style=" color: black; ">@Resource.Description</th>
                                        <th style=" color: black; ">@Resource.Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat-start="file in files" ng-if="!file.IsEdit" style="background:#eaf3ff !important">
                                        <td>
                                            <center>{{$index+1}}</center>
                                            <input type="hidden" ng-model="file.EmpDocumentId" />
                                        </td>
                                        <td ng-repeat="item in documents" ng-if="item.Id==file.DocumentType">

                                            {{item.Name}}

                                        </td>
                                        <td>
                                            <center>{{ file.OriginalName }}</center>
                                        </td>
                                        <td>
                                            <center>{{file.Description}}</center>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-danger" ng-click="delete(file)"><i class="fa fa-trash"></i></button>
                                        </td>
                                    </tr>
                                    <tr ng-show="file.IsEdit">
                                        <td>
                                            {{$index+1}}
                                            <input type="hidden" ng-model="file.EmpDocumentId" />
                                        </td>
                                        <td>
                                            <select class="form-control input-with-icon" id="selectDoument" ng-model="file.DocumentType" ng-options="a.Id as a.Name for a in documents" name="selectDoument " required>

                                                <option value="">Select Document Type </option>

                                            </select>
                                        </td>
                                        <td>
                                            <center>
                                                <input type="file" class="form-control" name="file" id="file_{{$index+1}}" ng-model="selectedFile" ng-change="fileSelected()" multiple />
                                            </center> <p class="mt-2">Selected file: {{ file.OriginalName }}</p>

                                        </td>
                                        <td>
                                            <center> <input type="text" class="form-control" name="Description" id="Description" ng-model="file.Description" maxlength="250" placeholder="Enter Description" /></center>
                                        </td>
                                        <td>
                                            <center style="font-size:20px">
                                                <button type="button" class="btn btn-info" ng-click="uploadFiles(file,($index+1))"><i class="fa fa-upload"></i></button>
                                                <button type="button" class="btn btn-success" ng-click="savefile(file)" ng-disabled="saveBtnIsDisable"><i class="fa fa-save"></i></button>
                                                <button type="button" class="btn btn-danger" ng-click="cancel(file)">
                                                    <i class="fa fa-remove"></i>
                                                </button>
                                            </center>
                                        </td>
                                    </tr>
                                    <tr ng-repeat-end ng-if="files.length == 0">
                                        <td colspan="4" align="center">
                                            @Resource.NoRecordAvailable
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <div class="row">
                                <div class="col-md-10">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-success waves-effect w-md waves-light m-b-5"
                                                tabindex="5" ng-click="SaveDocumentDetails(documentDetails,frmDocuments)">
                                            {{documentDetails.EmpDocumentId > 0 ? '@Resource.Update' : '@Resource.Save'}}
                                        </button>
                                        <button type="button" ng-click="ClearFormData(frmDocuments)" class="btn btn-info waves-effect w-md waves-light m-b-5"
                                                tabindex="4">
                                            @Resource.Clear
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <!-- End Document form -->
                    </div>


                </div>
            </div>

            <!--End Body Section-->
        </div>

        @section scripts {
            @Scripts.Render("~/bundles/Documents/Document")
        }
