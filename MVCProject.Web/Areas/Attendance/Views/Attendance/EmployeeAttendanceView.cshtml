@{
    ViewBag.Title = "EmployeeAttendanceView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .colSrno {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }

    .colPosition {
        width: 200px !important;
        min-width: 200px !important;
        max-width: 200px !important;
    }

    .colActive {
        width: 60px !important;
        min-width: 60px !important;
        max-width: 60px !important;
    }

    .colAction {
        width: 60px !important;
        min-width: 60px !important;
        max-width: 60px !important;
    }
</style>


<!-- bootstrap -->
<!-- cal -->
<div ng-controller="AttendanceCtrl" novalidate>
    <div class="">

        <div class="">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <h3 class="page-title">Employee Attendance</h3>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <div class="form-control-static">
                    <scrollable-table scroll-height="200">
                        <table ng-table="tableParams" id="datatable" class="table table-striped table-bordered table-hover">
                            <tr ng-repeat="emp in $data">
                                @*<td data-title="'SrNo'" header-class="'colSrno'" ng-class="'colSrno text-right'">
                                    {{(tableParams.$params.page-1)*tableParams.$params.count+($index + 1)}}
                                </td>*@
                                <td data-title="'Name'" sortable="'FirstName'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{emp.FirstName}}">
                                    {{emp.FirstName}} {{emp.LastName}}
                                </td>
                                <td data-title="'DepartmentName'" sortable="'DepartmentName'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{emp.Department}}">
                                    {{emp.DepartmentName}}
                                </td>
                                <td data-title="'DesignationName'" sortable="'DesignationId'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{emp.Designation}}">
                                    {{emp.DesignationName}}
                                </td>
                        </table>
                    </scrollable-table>
                </div>
            </div>
        </div>
       
    </div>

    </div>
    <!-- scripts -->
<div class="col-md-12">
    <div class="form-group">
        <h2 style="background-color:blue;color: white; text-align: center; font-style: oblique">Calendar</h2>

        <div ui-calendar="uiConfig.calendar" ng-model="eventSources"></div>


        <div ng-app="myApp" ng-controller="AttendanceCtrl">
            <div class="row">
                <div class="col-md-8">
                    <div id="calendar" ui-calendar="uiConfig.calendar" ng-model="eventSources" calendar="myCalendar"></div>
                </div>
                <div class="col-md-4">
                    <div ng-show="SelectedEvent" class="alert alert-success" style="margin-top:50px">
                        <h2 style="margin-top:0px"> Notification Is:</h2>
                        <h3 style="color:white">{{SelectedEvent.Title}}</h3>
                        <p>{{SelectedEvent.Description}}</p>
                    </div>
                </div>
            </div>
        </div>

        @*CSS*@
        <link href="~/Content/css/fullcalendar.css" rel="stylesheet" />
        @*<link href="~/Content/css/bootstrap.css" rel="stylesheet" />*@
        @*JS*@

        <!--<script src="~/Scripts/js/calendar.js"></script>
        <script src="~/Scripts/js/fullcalendar.js"></script>
        <script src="~/Scripts/js/gcal.js"></script>-->
        @*OUR ANGULAR COMPONENTs*@
        <!--<script src="~/Areas/Attendance/Scripts/angular/controllers/calendarDemo.js"></script>-->
    </div>
     
</div>

    

    <script src="https://kit.fontawesome.com/73e0cf2663.js" crossorigin="anonymous"></script>

    @section scripts {
        @Scripts.Render("~/bundles/Attendance/Attendance/EmployeeAttendanceView")
    }




