@{
    ViewBag.Title = "EmployeeAttendanceView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .colSrno {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }

    .colPosition {
        width: 200px !important;
        min-width: 200px !important;
        max-width: 200px !important;
    }

    .colActive {
        width: 60px !important;
        min-width: 60px !important;
        max-width: 60px !important;
    }

    .colAction {
        width: 60px !important;
        min-width: 60px !important;
        max-width: 60px !important;
    }
</style>

<div class="row">
    <div class="col-md-12">
        <!-- start Employee form -->

        <div class="card-box">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <h3 class="strip">
                            <i class="fa fa-id-card"></i>
                            Employee Details
                        </h3>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>
                            First Name: <span class="required-field"></span>

                        </label>
                        <label>
                            Urvashi Borse
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>
                            Department: <span class="required-field"></span>
                        </label>
                        <label>
                            Software
                        </label>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>
                            Designation: <span class="required-field"></span>
                        </label>
                        <label>
                            System User
                        </label>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
