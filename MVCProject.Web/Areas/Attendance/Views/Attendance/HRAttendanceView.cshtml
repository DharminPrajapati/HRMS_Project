@{ ViewBag.Title = Resource.Attendance;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .colPosition {
        width: 200px !important;
        min-width: 200px !important;
        max-width: 200px !important;
    }
</style>
<div ng-controller="AttendanceCtrl" novalidate>
    <div class="main-page-title title-icon relative l">
        <i class="fa fa-user icon-position" style="padding-top: 8px;"></i>
        <h4 class="header-title-sub l">

            @Resource.Attendance
        </h4>
    </div>

    <div class="card-box">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>

                                Select Employee
                            </label>
                            <input type="text" class="form-control" id="txtEmpName" ng-focus="true" name="txtEmpName" ng-change="isSearchClicked = false;" placeholder="@string.Format("{0} {1} {2}", Resource.Search, Resource.Employee, Resource.Details)" ng-model="search" tabindex="1" @*placeholder="Employee Name"*@ maxlength="250">
                            <div class="c">
                            </div>

                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>
                                {{selectedMonth}}
                            </label>
                            <select ng-model="selectedMonth" ng-change="generateDates()" class="form-control">
                                <option value="">Select Month</option>
                                <option value="1">January</option>
                                <option value="2">February</option>
                                <option value="3">March</option>
                                <option value="4">April</option>
                                <option value="5">May</option>
                                <option value="6">June</option>
                                <option value="7">July</option>
                                <option value="8">August</option>
                                <option value="9">September</option>
                                <option value="10">October</option>
                                <option value="11">November</option>
                                <option value="12">December</option>
                            </select>

                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>
                                {{selectedYear}}
                            </label>
                            <select ng-model="selectedYear" ng-change="generateDates()" class="form-control">
                                <option value="">Select Year</option>
                                <option value="2016">2016</option>
                                <option value="2017">2017</option>
                                <option value="2018">2018</option>
                                <option value="2019">2019</option>
                                <option value="2020">2020</option>
                                <option value="2021">2021</option>
                                <option value="2022">2022</option>
                                <option value="2023 ">2023</option>
                            </select>


                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">

                            <button type="button" class="attendance_btn  btn waves-effect w-md waves-light m-b-5" ng-model="search" ng-click="isSearchClicked = true;tableParams.page(1);tableParams.reload();">Search</button>

                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <div class="form-control-static">
                    <scrollable-table scroll-height="427">
                        <table ng-table="tableParams" id="datatable" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Employee</th>
                                    <th ng-repeat="date in dates">{{date | date : 'd'}}</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="emp in $data">
                                    <td sortable="'FirstName'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{emp.FirstName}}">
                                        {{emp.FirstName}} {{emp.LastName}}
                                    </td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </scrollable-table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/Attendance/Attendance/HRAttendanceView")
}
