@{ 
    ViewBag.Title = Resource.Employee;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .colSrno {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }

    .colPosition {
        width: 200px !important;
        min-width: 200px !important;
        max-width: 200px !important;
    }

    .colActive {
        width: 60px !important;
        min-width: 60px !important;
        max-width: 60px !important;
    }

    .colAction {
        width: 60px !important;
        min-width: 60px !important;
        max-width: 60px !important;
    }
</style>
<div ng-controller="EmployeeCtrl" novalidate>
    <!-- start title section-->
    <div class="main-page-title title-icon relative l">
        <i class="ti-id-badge icon-position" style="padding-top: 8px;"></i>
        <h4 class="header-title-sub l">
          
                @Resource.Employee
            </h4>
        <!-- start button-->
        <div class="pull-right">
        </div>
        <!-- end button-->
    </div>
    <!-- end title section-->
    <!-- start body section-->
    <div class="card-box">
        <div class="row">
            <div class="col-md-12">
                <!-- start Employee form -->
                <form name="frmEmployees" ng-submit="SaveEmployeeDetails(emplyeeDetailScope,frmEmployees)"
                      novalidate>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    First Name <span class="required-field">*</span>
                                </label>
                                <input type="text" class="form-control" id="txtEmployee" ng-focus="true" name="txtEmployee" ng-model="emplyeeDetailScope.FirstName" required tabindex="1" placeholder="Enter First Name" maxlength="250">
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmEmployees.txtEmployee.$dirty && frmEmployees.txtEmployee.$invalid">
                                    <span data-ng-show="frmEmployees.txtEmployee.$error.required">@Resource.FirstNameRequired</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Last Name <span class="required-field">*</span>
                                </label>
                                <input type="text" class="form-control" id="txtEmpln" ng-focus="true" name="txtEmpln" ng-model="emplyeeDetailScope.LastName" required tabindex="1" placeholder="Enter Last Name" maxlength="250">
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmEmployees.txtEmpln.$dirty && frmEmployees.txtEmpln.$invalid">
                                    <span data-ng-show="frmEmployees.txtEmpln.$error.required">@Resource.LastNameRequired</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Email <span class="required-field">*</span>
                                </label>
                                <input type="email" class="form-control" id="email" ng-focus="true" name="email" ng-model="emplyeeDetailScope.Email" required tabindex="1" placeholder="Enter Email" maxlength="250">
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmEmployees.email.$dirty && frmEmployees.email.$invalid">
                                    <span data-ng-show="frmEmployees.email.$error.required">Email Required</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Password <span class="required-field">*</span>
                                </label>
                                <input type="password" class="form-control" id="pass" ng-focus="true" name="pass" ng-model="emplyeeDetailScope.Password" required tabindex="1" placeholder="Enter Password" maxlength="250">
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmEmployees.pass.$dirty && frmEmployees.pass.$invalid">
                                    <span data-ng-show="frmEmployees.pass.$error.required">Password Required</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Joining Date <span class="required-field">*</span>
                                </label>
                                <input type="date" class="form-control" id="joindate" ng-focus="true" name="joindate" ng-model="emplyeeDetailScope.JoiningDate" required tabindex="1" placeholder="Select JoinDate" maxlength="250">
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmEmployees.joindate.$dirty && frmEmployees.joindate.$invalid">
                                    <span data-ng-show="frmEmployees.joindate.$error.required">Joindate Required</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    PhoneNumber <span class="required-field">*</span>
                                </label>
                                <input type="text" class="form-control" id="phno" ng-focus="true" name="phno" ng-model="emplyeeDetailScope.PhoneNumber" required tabindex="1" placeholder="Enter Phone Number" maxlength="250">
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmEmployees.phno.$dirty && frmEmployees.phno.$invalid">
                                    <span data-ng-show="frmEmployees.phno.$error.required">PhoneNumber Required</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    AlternatePhoneNumber
                                </label>
                                <input type="text" class="form-control" id="alphno" ng-focus="true" name="alphno" ng-model="emplyeeDetailScope.AlternatePhoneNumber" required tabindex="1" placeholder="Enter Phone Number" maxlength="250">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <!--IsActive -->
                            <div class="form-group">
                                <label>
                                </label>
                                <div class="form-control-static">
                                    <div class="checkbox checkbox-info">
                                        <input type="checkbox" id="chkIsActive" name="chkIsActive" ng-model="emplyeeDetailScope.IsActive"
                                               tabindex="2" />
                                        <label for="chkDesignationActive">
                                            @Resource.IsActive
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group">
                                <button type="submit" class="btn btn-success waves-effect w-md waves-light m-b-5"
                                        ng-disabled="frmEmployees.txtEmployee.$invalid" tabindex="3">
                                    {{emplyeeDetailScope.EmployeeId > 0 ? '@Resource.Update' : '@Resource.Save'}}
                                </button>
                                <button type="button" ng-click="ClearFormData(frmEmployees)" class="btn btn-info waves-effect w-md waves-light m-b-5"
                                        tabindex="4">
                                    @Resource.Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- end Employee form -->
                <hr />
                <!-- start Employee details list -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-7">
                                <label class="table-title">
                                    @Resource.Employee @Resource.Details
                                </label>
                            </div>
                            <div class="col-md-5">
                                <div class="input-group">
                                    <input type="text" tabindex="104" ng-model="search" class="form-control" ng-change="isSearchClicked = false;" placeholder="@string.Format("{0} {1} {2}", Resource.Search, Resource.Employee, Resource.Details)" />
                                    <a href class="input-group-addon cursor-pointer" tabindex="105" ng-click="isSearchClicked = true;tableParams.page(1);tableParams.reload();">
                                        <i class="fa fa-search"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="form-control-static">
                                <scrollable-table scroll-height="427">
                                    <table ng-table="tableParams" id="datatable" class="table table-striped table-bordered table-hover">
                                        <tr ng-repeat="emp in $data">
                                            <td data-title="'@Resource.SrNo'" header-class="'colSrno'" ng-class="'colSrno text-right'">
                                                {{(tableParams.$params.page-1)*tableParams.$params.count+($index + 1)}}
                                            </td>
                                            <td data-title="'FirstName'" sortable="'FirstName'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{emp.FirstName}}">
                                                {{emp.FirstName}}
                                            </td>
                                            <td data-title="'LastName'" sortable="'LastName'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{emp.LastName}}">
                                                {{emp.LastName}}
                                            </td>
                                            <td data-title="'Email'" sortable="'Email'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{emp.Email}}">
                                                {{emp.Email}}
                                            </td>
                                            <td data-title="'Password'" sortable="'Password'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{emp.Password}}">
                                                {{emp.Password}}
                                            </td>
                                            <td data-title="'JoiningDate'" sortable="'JoiningDate'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{emp.JoiningDate}}">
                                                {{emp.JoiningDate | date}}
                                            </td>
                                            <td data-title="'PhoneNumber'" sortable="'PhoneNumber'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{emp.PhoneNumber}}">
                                                {{emp.PhoneNumber}}
                                            </td>
                                            <td data-title="'AlternatePhoneNumber'" sortable="'AlternatePhoneNumber'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content=" {{emp.AlternatePhoneNumber}}">
                                                {{emp.AlternatePhoneNumber}}
                                            </td>
                                            <td data-title="'@Resource.Active'" sortable="'IsActive'" header-class="'colActive'" ng-class="'colActive text-center'">
                                                <input type="checkbox" class="js-switch" ui-switch options="switchOptions" ng-model="emp.IsActive"
                                                       ng-disabled="true" />
                                            </td>
                                            <td data-title="'@Resource.Action'" header-class="'colAction'" ng-class="'colAction text-center'">
                                                <a class="btn btn-icon btn-white btn-xs waves-effect waves-light m-r-5 btn-edit" title="Edit"
                                                   ng-click="EditEmployeeDetails(emp.EmployeeId)">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <tr ng-if="$data.length == 0">
                                            <td colspan="4" class="no-record">
                                                @Resource.NoRecordAvailable
                                                <span ng-if="search!=''">
                                                    <br />@Resource.YourSearch - '{{search}}' @Resource.DidNotMatchAnyRecord
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                </scrollable-table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end Employee details list -->
            </div>
        </div>
    </div>
    <!-- end body section-->
</div>
@section scripts {
    @Scripts.Render("~/bundles/EmployeeManagement/Employee")
}
