@{
    ViewBag.Title = Resource.Company_Master;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .colSrno {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }

    .colPosition {
        width: 400px !important;
        min-width: 400px !important;
        max-width: 400px !important;
    }

    .colActive {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }

    .colAction {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }
</style>
<div ng-controller="CompanyMasterCtrl" novalidate>
    <!--Start Title Section-->
    <div class="main-page-title title-icon relative l">
        <i class="fa fa-gears icon-position" style="padding-top:8px;"></i>
        <h4 class="header-title-sub l">@Resource.Company_Name</h4>
        <div class="pull-right">

        </div>
    </div>

    <!--End Title Section-->
    <!--Start Body Section-->
    <div class="card-box">
        <div class="row">
            <div class="col-md-12">
                <!-- start Department form -->
                <form name="frmCompanyMaster" ng-submit="SaveCompanyMasterDetails(CompanyDetailScope,frmCompanyMaster)" novalidate>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    @Resource.Company_Name <span class="required-field">*</span>
                                </label>
                                <input type="text" class="form-control" name="txtCompanyName" id="txtCompanyName" required ng-focus="true" ng-model="CompanyDetailScope.CompanyName" tabindex="1" placeholder="@Resource.Company_Name" maxlength="250" />
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmCompanyMaster.txtCompanyName.$dirty && frmCompanyMaster.txtCompanyName.$invalid">
                                    <span data-ng-show="frmCompanyMaster.txtDescription.$error.required">@Resource.Company_Name</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    @Resource.ShortCode<span class="required-field">*</span>
                                </label>
                                <input type="text" class="form-control" name="txtShortCode" id="txtShortCode" required ng-focus="true" ng-model="CompanyDetailScope.ShortCode" tabindex="1" placeholder="@Resource.ShortCode" maxlength="250" />
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmCompanyMaster.txtShortCode.$dirty && frmCompanyMaster.txtShortCode.$invalid">
                                    <span data-ng-show="frmCompanyMaster.txtShortCode.$error.required">@Resource.ShortCode</span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <!--IsActive -->
                            <div class="form-group">
                                <label>
                                </label>
                                <div class="form-control-static">
                                    <div class="checkbox checkbox-info">
                                        <input type="checkbox" id="chkIsActive" name="chkIsActive" ng-model="CompanyDetailScope.IsActive"
                                               tabindex="2" />
                                        <label for="chkDesignationActive">
                                            @Resource.IsActive
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group">
                                <button type="submit" class="btn btn-success waves-effect w-md waves-light m-b-5"
                                        ng-disabled="frmCompanyMaster.txtCompanyName.$invalid" tabindex="3">
                                    {{CompanyDetailScope.CompanyMasterId > 0 ? '@Resource.Update' : '@Resource.Save'}}
                                </button>
                                <button type="button" ng-click="ClearFormData(frmCompanyMaster)" class="btn btn-info waves-effect w-md waves-light m-b-5"
                                        tabindex="4">
                                    @Resource.Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- End Department form -->
                <hr />
                <!--Start Department Details List-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-7">
                                <h3 class="strip">
                                    <i class="fa fa-gears" aria-hidden="true"></i>
                                    <label class="table-title">
                                        @Resource.Company_Master @Resource.Details
                                    </label>
                                </h3>
                            </div>
                            <div class="col-md-5">
                                <div class="input-group">
                                    <input type="text" tabindex="104" ng-model="search" class="form-control" ng-change="isSearchClicked = false;" placeholder="@string.Format("{0} {1}",Resource.Company_Master,Resource.Details)" />
                                    <a href class="input-group-addon cursor-pointer" tabindex="105" ng-click="isSearchClicked=true;tableParams.page(1);tableParams.reload();"> <i class="fa fa-search"></i></a>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="form-control-static">
                                <scrollable-table scroll-height="427">
                                    <table ng-table="tableParams" id="datatable" class="table table-striped table-bordered table-hover">
                                        <tr ng-repeat="dt in $data">
                                            @*ng-hide="!dt.IsActive">*@
                                            <td data-title="'@Resource.SrNo'" header-class="'colSrno'" ng-class="'colSrno text-right'">
                                                {{(tableParams.$params.page-1)*tableParams.$params.count+($index + 1)}}
                                            </td>
                                            <td data-title="'@Resource.Company_Name'" sortable="'Companyname'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{dt.CompanyName}}">
                                                {{dt.CompanyName}}
                                            </td>
                                            <td data-title="'@Resource.ShortCode'" sortable="'ShortCode'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{dt.ShortCode}}">
                                                {{dt.ShortCode}}
                                            </td>
                                            <td data-title="'@Resource.Active'" sortable="'IsActive'" header-class="'colActive'" ng-class="'colActive text-center'">
                                                <input type="checkbox" class="js-switch" ui-switch options="switchOptions" ng-model="dt.IsActive"
                                                       ng-disabled="true" />
                                            </td>
                                            <td data-title="'@Resource.Action'" header-class="'colAction'" ng-class="'colAction text-center'">
                                                <a class="btn btn-icon btn-white btn-xs waves-effect waves-light m-r-5 btn-edit" title="Edit"
                                                   ng-click="EditCompanyMasterDetails(dt.CompanyMasterId)">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <tr ng-if="$data.length==0">
                                            <td colspan="4" class="no-record">
                                                @Resource.NoRecordFound
                                                <span ng-if="search!=''">
                                                    <br /> @Resource.YourSearch -'{{search}}'@Resource.DidNotMatchAnyRecord
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                </scrollable-table>
                            </div>
                        </div>
                    </div>
                </div>
                <!--End Department Details List-->

            </div>
        </div>
    </div>
    <!--End Body Section-->

</div>
@section scripts {
    @Scripts.Render("~/bundles/Configuration/CompanyMaster")
}


