@{
    ViewBag.Title = Resource.Allowance_Master;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .colSrno {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }

    .colPosition {
        width: 400px !important;
        min-width: 400px !important;
        max-width: 400px !important;
    }

    .colActive {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }

    .colAction {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }
    .coldes {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }
</style>
<div ng-controller="AllowanceMasterCtrl" novalidate>
    <!--Start Title Section-->
    <div class="main-page-title title-icon relative l">
        <i class="fa fa-gears icon-position" style="padding-top:8px;"></i>
        <h class="header-title-sub l">@Resource.Allowance_Master</h>
        <div class="pull-right">

        </div>
    </div>

    <!--End Title Section-->
    <!--Start Body Section-->
    <div class="card-box">
        <div class="row">
            <div class="col-md-12">
                <!-- start Department form -->
                <form name="frmAllowanceMaster" ng-submit="SaveAllowanceDetails(AllowanceDetailScope,frmAllowanceMaster)" novalidate>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    @Resource.Description <span class="required-field">*</span>
                                </label>
                                <input type="text" class="form-control" name="txtDescription" id="txtDescription" required ng-focus="true" ng-model="AllowanceDetailScope.Description" tabindex="1" placeholder=" Allowance @Resource.Description" maxlength="250" />
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmAllowanceMaster.txtDescription.$dirty && frmAllowanceMaster.txtDescription.$invalid">
                                    <span data-ng-show="frmAllowanceMaster.txtDescription.$error.required"> @Resource.Description Required</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    @Resource.Short_Code<span class="required-field">*</span>
                                </label>
                                <input type="text" class="form-control" name="txtShortCode" id="txtShortCode" required ng-focus="true" ng-model="AllowanceDetailScope.ShortCode" tabindex="1" placeholder="@Resource.Short_Code" maxlength="250" />
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmAllowanceMaster.txtShortCode.$dirty && frmAllowanceMaster.txtShortCode.$invalid">
                                    <span data-ng-show="frmAllowanceMaster.txtShortCode.$error.required">@Resource.Short_Code required</span>
                                </div>
                            </div>
                        </div>


                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Value <span>(%)</span><span class="required-field">*</span>
                                </label>
                                <input type="text" class="form-control" name="txtValue" id="txtValue" required ng-focus="true" ng-model="AllowanceDetailScope.Value" tabindex="2" placeholder="@Resource.Value" maxlength="250" />
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmAllowanceMaster.txtValue.$dirty && frmAllowanceMaster.txtValue.$invalid">
                                    <span data-ng-show="frmAllowanceMaster.txtValue.$error.required">Value required</span>
                                </div>
                            </div>
                        </div>
               </div>
                        <div class="row">
                        <div class="col-md-4">
                            <!--IsActive -->
                            <div class="form-group">
                                <label>
                                </label>
                                <div class="form-control-static">
                                    <div class="checkbox checkbox-info">
                                        <input type="checkbox" id="chkIsActive" name="chkIsActive" ng-model="AllowanceDetailScope.IsActive"
                                               tabindex="3" />
                                        <label for="chkDesignationActive">
                                            @Resource.IsActive
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
            </div>
       
                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group">
                                <button type="submit" class="btn btn-success waves-effect w-md waves-light m-b-5"
                                        ng-disabled="frmAllowanceMaster.txtDescription.$invalid" tabindex="3">
                                    {{AllowanceDetailScope.AllowanceId > 0 ? '@Resource.Update' : '@Resource.Save'}}
                                </button>
                                <button type="button" ng-click="ClearFormData(frmAllowanceMaster)" class="btn btn-info waves-effect w-md waves-light m-b-5"
                                        tabindex="4">
                                    @Resource.Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- End Department form -->
                <hr />
                <!--Start Department Details List-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-7">
                                <h2>
                                    @*<i class="fa fa-gears" aria-hidden="true"></i>*@
                                    <label class="table-title">
                                        @Resource.Allowance_Master @Resource.Details
                                    </label>
                                </h2>
                            </div>
                            <div class="col-md-5">
                                <div class="input-group">
                                    <input type="text" tabindex="5" ng-model="search" class="form-control" ng-change="isSearchClicked = false;" placeholder="@string.Format("{0} {1}",Resource.Allowance_Master,Resource.Details)" />
                                    <a href class="input-group-addon cursor-pointer" tabindex="105" ng-click="isSearchClicked=true;tableParams.page(1);tableParams.reload();"> <i class="fa fa-search"></i></a>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="form-control-static">
                                <scrollable-table scroll-height="427">
                                    <table ng-table="tableParams" id="datatable" class="table table-striped table-bordered table-hover">
                                        <tr ng-repeat="dt in $data">
                                            @*ng-hide="!dt.IsActive">*@
                                            <td data-title="'@Resource.SrNo'" header-class="'colSrno'" ng-class="'colSrno text-right'">
                                                {{(tableParams.$params.page-1)*tableParams.$params.count+($index + 1)}}
                                            </td>
                                            <td data-title="'@Resource.Description'" sortable="'Description'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{dt.Description}}">
                                                {{dt.Description}}
                                            </td>
                                            <td data-title="'@Resource.Short_Code'" sortable="'ShortCode'" header-class="'coldes'" ng-class="'coldes breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{dt.ShortCode}}">
                                                {{dt.ShortCode}}
                                            </td>
                                            <td data-title="'Value(%)'" sortable="'ShortCode'" header-class="'coldes'" ng-class="'coldes breakword overflow-ellipsis cursor-pointer'" angular-tooltip data-side="bottom" data-content="{{dt.Value}}">
                                                {{dt.Value}}
                                            </td>
                                            <td data-title="'@Resource.Active'" sortable="'IsActive'" header-class="'colActive'" ng-class="'colActive text-center'">
                                                <input type="checkbox" class="js-switch" ui-switch options="switchOptions" ng-model="dt.IsActive"
                                                       ng-disabled="true" />
                                            </td>
                                            <td data-title="'@Resource.Action'" header-class="'colAction'" ng-class="'colAction text-center'">
                                                <a class="btn btn-icon btn-white btn-xs waves-effect waves-light m-r-5 btn-edit" title="Edit"
                                                   ng-click="EditAllowanceMasterDetails(dt.AllowanceId)">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <tr ng-if="$data.length==0">
                                            <td colspan="4" class="no-record">
                                                @Resource.NoRecordFound
                                                <span ng-if="search!=''">
                                                    <br /> @Resource.YourSearch -'{{search}}'@Resource.DidNotMatchAnyRecord
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                </scrollable-table>
                            </div>
                        </div>
                    </div>
                </div>
                <!--End Department Details List-->

          
       
    </div>
    <!--End Body Section-->

</div>
@section scripts {
    @Scripts.Render("~/bundles/Configuration/AllowanceMaster")
}


